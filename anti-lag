local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local debris = workspace:WaitForChild("Debris")

local bigSize = Vector3.new(1e5,1e5,1e5)

local function getClosest()
    local me = lp.Character
    if not me then return end
    local hrp = me:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local closest
    local dist = math.huge

    for _,plr in ipairs(Players:GetPlayers()) do
        if plr ~= lp then
            local c = plr.Character
            local t = c and c:FindFirstChild("HumanoidRootPart")
            if t then
                local d = (hrp.Position - t.Position).Magnitude
                if d < dist then
                    dist = d
                    closest = plr
                end
            end
        end
    end

    return closest
end

local function tp(main)
    local p = getClosest()
    if not p then return end
    local c = p.Character
    if not c then return end
    local h = c:FindFirstChild("HumanoidRootPart")
    if not h then return end

    h.CFrame = main.CFrame + Vector3.new(0,6,0)
end

debris.ChildAdded:Connect(function(v)
    if v.Name == "Blackhole" then
        task.spawn(function()
            local m = v:WaitForChild("Main",3)
            if m and m:IsA("BasePart") then
                m.Size = bigSize
                tp(m)
            end
        end)
    end
end)
